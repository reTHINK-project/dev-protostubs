{
  "name": "dev-protostubs",
  "version": "0.9.0",
  "description": "Repository where all the protostubs, idp-proxyies and hyperties, are",
  "main": "webpack.config.js",
  "scripts": {
    "develop": "run-p develop:* && cp -r src/*/*.json dist/*/*json",
    "develop:idp": "webpack --config webpack.idp.config.js --mode development --watch ",
    "develop:ps": "webpack --config webpack.ps.config.js --mode development --watch ",
    "develop:hy": "webpack --config webpack.hy.config.js --mode development --watch ",
    "develop:server": "webpack --config webpack.server.config.js --mode development --watch ",
    "develop:hy.json": "cp -r src/hyperty/*/*.hy.json dist/.well-known/hyperty/",
    "develop:idp.json": "cp -r src/idpproxy/*/*.idp.json dist/.well-known/idp-proxy/",
    "develop:ps.json": "cp -r src/protostub/*/*.ps.json dist/.well-known/protocolstub/",
    "build": "run-p build:*",
    "build:idp": "webpack --config webpack.idp.config.js --mode production --watch",
    "build:ps": "webpack --config webpack.ps.config.js --mode production --watch",
    "build:hy": "webpack --config webpack.hy.config.js --mode production --watch",
    "update:all": "node bin/update",
    "install:all": "node bin/preinstall",
    "test": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reTHINK-project/dev-protostubs.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reTHINK-project/dev-protostubs/issues"
  },
  "homepage": "https://github.com/reTHINK-project/dev-protostubs#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "all": "0.0.0",
    "atob": "^2.1.0",
    "babel-loader": "^8.0.6",
    "btoa": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "runtime-core": "github:rethink-project/dev-runtime-core#develop"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-systemjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "chai": "^4.1.2",
    "chai-arrays": "^1.1.0",
    "chai-as-promised": "^7.1.1",
    "chai-json-schema": "^1.5.1",
    "jquery": "^3.4.1",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.0.1",
    "karma-html-reporter": "^0.2.7",
    "karma-htmlfile-reporter": "^0.3.8",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "^2.0.13",
    "mocha": "3.4.2",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.14.0",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  }
}
